{
	  "index_patterns": "metrics*",
	  "settings": {
	    "index": {
	      "number_of_shards": 1,
	      "refresh_interval": "30s"
	    },
	    "number_of_replicas": 0
	  },
	  "mappings": {
	      "_source":         { "enabled": true },
	      "properties": {
	          "name": {
	            "type": "keyword"
	          },
	          "stormId": {
	            "type": "keyword"
	          },
	          "srcComponentId": {
	            "type": "keyword"
	          },
	          "srcTaskId": {
	            "type": "short"
	          },
	          "srcWorkerHost": {
	            "type": "keyword"
	          },
	          "srcWorkerPort": {
	            "type": "integer"
	          },
	          "timestamp": {
	            "type": "date",
	            "format": "date_optional_time"
	          },
	          "value": {
	            "type": "double"
	          }
	      }
	  }
}